<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- связывание объекта Pet-->
    <bean id="myPet"
          class="spring_introduction.Parrot">
    </bean>

    <!-- создание бина класса Person Зависимость с помощью конструктора-->
    <!-- <bean id="myPerson"
           class="spring_introduction.Person"> -->
    <!-- это передача в конструктор-->
    <!--  <constructor-arg ref = "myPet"/>
  </bean>  -->

    <!-- создание бина класса Person Зависимость с помощью сеттера-->
    <bean id="myPerson"
          class="spring_introduction.Person">
    <!-- это передача в сеттер-->
        <property name="pet" ref="myPet"/>
    </bean>


</beans>